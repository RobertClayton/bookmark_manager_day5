<h1>Welcome!</h1>
<% if @user %>
  <h3><%= @user.email %></h3>
<% end %>

<form action='/links/new' method='get'>
  <input type='submit' value="Add new link">
</form>

<br>

<form action='/links/filter' method='post'>
  <input type='text' name="filter" placeholder="Filter tags by:">
  <input type='submit' value='Filter'>
</form>

<h1> Links </h1>

<ul id='links'>
  <% @links.each do |link| %>
    <li>
      <b>Title:</b> <%= link.title %>
    <br>
      <b>URL:</b>   <%= link.url   %>
    <br>
      <b>Tags:</b>   <%= link.tags.map(&:name).each { |x| x }  %>
    </li>
    <br>
    <br>
  <% end %>
</ul>
